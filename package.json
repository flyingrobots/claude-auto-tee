{
  "name": "claude-auto-tee",
  "version": "1.0.0",
  "description": "Automatic tee injection for Claude Code bash commands - save full output while seeing truncated results",
  "main": "src/hook.js",
  "bin": {
    "claude-auto-tee": "./install.js"
  },
  "scripts": {
    "install": "node install.js", 
    "test": "node test/test.js",
    "test:all": "node test/run-all-tests.js",
    "test:performance": "node test/performance/benchmark.js",
    "test:security": "node test/security/security-tests.js",
    "test:edge-cases": "node test/edge-cases/edge-case-tests.js",
    "test:activation": "node test/activation/activation-strategy-tests.js",
    "test:ci": "node test/ci/ci-tests.js",
    "demo": "node test/demo.js",
    "demo:realistic": "node test/realistic-demo.js",
    "docker:test": "docker-compose run --rm claude-auto-tee-test",
    "docker:test:all": "docker-compose -f test/environments/docker-compose.test.yml run --rm alpine-test npm run test:all",
    "docker:test:cross-platform": "docker-compose -f test/environments/docker-compose.test.yml up --abort-on-container-exit",
    "docker:demo": "docker-compose run --rm claude-auto-tee-demo", 
    "docker:dev": "docker-compose run --rm claude-auto-tee-dev"
  },
  "keywords": [
    "claude",
    "claude-code",
    "bash",
    "tee",
    "hook",
    "automation"
  ],
  "author": "flyingrobots",
  "license": "MIT",
  "dependencies": {
    "bash-parser": "^0.5.0",
    "uuid": "^11.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flyingrobots/claude-auto-tee.git"
  },
  "bugs": {
    "url": "https://github.com/flyingrobots/claude-auto-tee/issues"
  },
  "homepage": "https://github.com/flyingrobots/claude-auto-tee#readme"
}
